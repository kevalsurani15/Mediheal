      <div class="container">
        <div class="my-5 container">
            <form action="/addmed" method="POST">
                      <div class="mb-3">
                          <label for="pname" class="form-label text-capitalize">Enter Commodity name</label>
                          <input type="text" name="pname" id="pname" class="form-control" placeholder="Enter Name of product" required>
                      </div>
                      <div class="mb-3">
                        <label for="ptype" class="form-label text-capitalize">Medicine Type</label>
                        <input type="text" name="ptype" id="ptype" class="form-control" placeholder="Enter Type of Medicine" required>
                    </div>
                      <div class="mb-3">
                        <label for="price" class="form-label text-capitalize">Price</label>
                        <input type="text" name="price" id="price" class="form-control" placeholder="Enter Price" required>
                    </div>
                    <div class="mb-3">
                      <label for="quantity" class="form-label text-capitalize">Quantity</label>
                      <input type="text" name="quantity" id="quantity" class="form-control" placeholder="Quantity" required>
                  </div>
                  <div class="mb-3">
                    <label for="date" class="form-label text-capitalize">Expiry Date</label>
                    <input type="date" name="date" id="date" class="form-control" required>
                  </div>
              </div>
              <div>
                <button type="submit" class="btn btn-success" name="register" data-bs-dismiss="modal">Submit</button>
               </div>
               </form>
            </div>
          
  <h1 class="text-center">Medicine List</h1>
                          <div class="card-body container">
                              <table class="table table-bordered text-center">
                                  <thead>
                                    <tr>
                                      <th scope="col">Product Name</th>
                                      <th scope="col">Type</th>
                                      <th scope="col">Price</th>
                                      <th scope="col">Stock</th>
                                      <th scope="col">Action</th>
                                    </tr>
                                  </thead>
                                  <tbody>
                                    {{#each data}}
                                    <tr>
                                      
                                     
                                      <td class="text-capitalize">{{pname}}</td>
                                      <td class="text-capitalize">{{ptype}}</td>
                                      <td class="text-capitalize">{{price}}</td>
                                      <td class="text-capitalize">{{quantity}}</td>
                                      <td><div>
                                        <form action="/delmed" method="POST">
                                        <input type="hidden" name="id" value="{{_id}}">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                      </div></td>
                                    </tr>
                                    {{/each}}
                                  </tbody>
                                </table>
                          </div>
                      </div>
                  </div>
              
      </div>
            
     <script src="https://kit.fontawesome.com/c03e57a261.js" crossorigin="anonymous"></script>

