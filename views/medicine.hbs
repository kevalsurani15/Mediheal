        <div class="collapse navbar-collapse fs-01 " id="navbarTogglerDemo03" >
          <ul class="navbar-nav mr-auto mt-2 mt-lg-0 w-100 d-flex justify-content-end">
            <li class="nav-item active">
              <a class="nav-link  mycol" href="/dashboard"><i class='fa fa-dashboard'></i> Dashboard<span class="sr-only">(current)</span></a>
            </li>
              <li class="nav-item">
                <a class="nav-link mycol ac1" href="/medicinelist"><i class="bi bi-file-earmark-text"></i> Medicine-List</a>
