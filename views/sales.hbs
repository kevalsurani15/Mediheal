                              <tr>
                                <th scope="col">Product Name</th>
                                <th scope="col">Qty</th>
                                <th scope="col">Amount</th>
                                <th scope="col">Date</th>
                              </tr>
                            </thead>
                             <tbody>
                          {{#each data}}
                          <tr>
                            <td class="text-capitalize">{{commodityname}}</td>
                            <td class="text-capitalize">{{quantity}}</td>
                            <td class="text-capitalize">{{amount}}</td>
                            <td class="text-capitalize">{{date}}</td>
                          </tr>
                          {{/each}}
                        </tbody>
                          </table>
                    </div>
