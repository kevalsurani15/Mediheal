      <div class="my-5 container">
        
          <form action="/sold" method="POST">
                    <div class="mb-3">
                        <label for="pname" class="form-label text-capitalize">enter product name</label>
                        <input type="text" name="pname" id="pname" class="form-control" placeholder="Enter Name of product" required>
                    </div>
                    <div class="mb-3">
                        <label for="qty" class="form-label text-capitalize">Quantity</label>
                        <input type="text" name="quantity" id="qty" class="form-control" placeholder="Quantity" required>
                    </div>
                
            </div>
